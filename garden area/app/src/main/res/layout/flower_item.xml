<!-- flower_item_layout.xml -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="15dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="220dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/buquet1" />

                <TextView
                    android:id="@+id/flowerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Ladies Day"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/flowerPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="550EGP"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/purple" />

                <TextView
                    android:id="@+id/highlightedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="SPECIAL DEAL"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/cart"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="113dp"
                android:layout_marginVertical="130dp"
                android:padding="8dp"
                android:src="@drawable/cart" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>